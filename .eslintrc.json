{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": "off",
    "import/extensions": "off",
    "max-len": [2, 130, 2, { "ignoreUrls": true }],
    "comma-dangle": "off",
    "import/prefer-default-export": "off",
    "indent": "off",
    "implicit-arrow-linebreak": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
